#include <main.h>

#use fast_io(C)

#define trigger pin_C0
#define echo pin_C1
#define dot pin_E2

int b;
int time;

/*
* transofmation de la valeur en valeur base 16
*/
int outputValueParser(int value){
   int output = 0;
   if (b < 10) { output = value;}
   else {
    long long x = value;
    x = x % 10;
    int i = (int) value;
    i = i/10;
    
    output = x + i*16;
   }
   return output;
}

/*
* récupération distance
*/
int parseDist(int time){
  //return time / (343);
  return time / 147.05;
}

/*
* trigger de la sonde
*/
void triggerSonde(){
   output_high(trigger);
   delay_us(10);
   output_low(trigger);
}

/*
* fonction principale
*/
void main()
{
   setup_low_volt_detect(FALSE);
   set_tris_c(2); // set RC1 as input (ECHO)

   int c = 0;
   
   while(true)
   {
   b = 0.0;
   time = 0.0;
   
   triggerSonde();
   
   while(input(echo) == 0); // attente début
   set_timer1(0);
   while(input(echo) == 1); // attente fin ou overflow
   time = get_timer1();
   
   b = parseDist(time);
   
   if (b < 10) {
    b *= 10;
    output_high(dot);
   }
   else {
    output_low(dot);
   }
   
   //output_b(outputValueParser(b));
   output_b(b);
   c++;
   delay_ms(400);
   }

}

