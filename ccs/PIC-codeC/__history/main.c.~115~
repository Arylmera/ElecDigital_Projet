#include <main.h>

#use fast_io(C)

#define trigger pin_C0
#define echo pin_C1
#define dot pin_E2

float b;
float time;

/*
* transofmation de la valeur en valeur base 16
*/
float outputValueParser(float value){
   float output = 0;
   if (b < 10) { output = value;}
   else {
    long long x = value;
    x = x % 10;
    float i = (float) value;
    i = i/10;
    
    output = x + i*16;
   }
   return output;
}

/*
* récupération distance
*/
float parseDist(float time){
  return time / (343 * 1000);
  //return time/1166;
}

/*
* trigger de la sonde
*/
void triggerSonde(){
   output_high(trigger);
   delay_us(10);
   output_low(trigger);
}

/*
* fonction principale
*/
void main()
{
   setup_low_volt_detect(FALSE);
   set_tris_c(2); // set RC1 as input (ECHO)
   
   Delay_ms(3000); // temps de setup de la pic
   
   //T1CON = 0x80;       
   //TMR1IF = 0;         // overflow flag = 0
   //TMR1=0;

   
   while(true)
   {
   b = 0.0;
   time = 0.0;
   
   triggerSonde();
   
   while(input(echo) == 0){
      //TMR1=0;  // reset timer à 0
      //TMR1ON=1; // lancement du timer
   }
   while(input(echo) == 1){ //  && !TMR1IF  retour valuer ou overflow timer -> timeout
      //time = TMR1; // récupération valeur timer
      //TMR1ON:0; // stop timer
      time += 1;
      Delay_ms(1);
   }
   
   b = parseDist(time);
   printf(b);
   if (b < 10) {
    b *= 10;
    output_high(dot);
   }
   else {
    output_low(dot);
   }
   
   output_b(outputValueParser(b));
   delay_ms(100);
   }

}

