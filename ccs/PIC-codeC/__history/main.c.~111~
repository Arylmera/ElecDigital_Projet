#include <main.h>

#use fast_io(C)

#define trigger pin_C0
#define echo pin_C1
#define dot pin_E2

double b;
double time;

/*
* transofmation de la valeur en valeur base 16
*/
double outputValueParser(double value){
   double output = 0;
   if (b < 10) { output = value;}
   else {
    long long x = value;
    x = x % 10;
    double i = (double) value;
    i = i/10;
    
    output = x + i*16;
   }
   return output;
}

/*
* récupération distance
*/
double parseDist(double time){
  //return time * 0.034;
  return (time/58.82) + 1;
}

/*
* trigger de la sonde
*/
void triggerSonde(){
   output_high(trigger);
   delay_us(10);
   output_low(trigger);
}

/*
* fonction principale
*/
void main()
{
   setup_low_volt_detect(FALSE);
   set_tris_c(2); // set RC1 as input (ECHO)
   
   Delay_ms(3000); // temps de setup de la pic
   setup_timer_0(RTCC_INTERNAL|RTCC_DIV_256);
   
   while(true)
   {
   b = 0.0;
   time = 0.0;
   set_timer0(0);
   
   triggerSonde();
   
   while(input(echo) == 0){
   }
   while(input(echo) == 1){
      time = time + 1;
      delay_us(1);
   }
   
   b = parseDist(time);
   printf(b);
   if (b < 10) {
    b *= 10;
    output_high(dot);
   }
   else {
    output_low(dot);
   }
   
   output_b(outputValueParser(b));
   delay_ms(100);
   }

}

