#include <main.h>

int b_value;

long long convertToBinary(int n) {
    long long bin = 0;
    int rem, i = 1;
    while (n != 0) {
        rem = n % 2;
        n /= 2;
        bin += rem * i;
        i *= 10;
    }
    return bin;
}

void main()
{
   setup_low_volt_detect(FALSE);
   b_value = 0;
    
   while(true)
   {

   output_b( convertToBinry(b_value) );
   output_high(PIN_E0);
   delay_ms(500);
   output_low(PIN_E0);
   b_value++;
   
   }

}

