#include <main.h>

#define trigger pin_C0
#define echo pin_C1

int b;
int check;

/*
* transofmation de la valeur en valeur base 16
*/
int outputValueParser(int value){
   int output = 0;
   if (b < 10) { output = value;}
   else {
    int x = value;
    x = x%10;
    int i = value;
    i = i/10;
    
    output = x + i*16;
   }
   return output;
}

/*
* récupération distance
*/
int parseDist(int dist){
  return dist/58;
}

/*
* trigger de la sonde
*/
void triggerSonde(){
   output_high(trigger);
   delay_us(10);
   output_low(trigger);
}

/*
* fonction principale
*/
void main()
{
   delay_ms(1000);                              // Boot-up delay
   setup_timer_1(T1_INTERNAL|T1_DIV_BY_8);     // initiating timer
   setup_low_volt_detect(FALSE);
   set_tris_c(0x01000000); // set RC1 as input (ECHO)
   set_timer1(0);
   
   while(true)
   {
   check = 0;
   b = 0;
   
   triggerSonde();
   set_timer1(0);
   while(!input(echo) && (get_timer1() < 1000));
   b = get_timer1();
   b = parseDist(b);
   
   output_b( outputValueParser(b) );
   delay_ms(100);
   }

}

