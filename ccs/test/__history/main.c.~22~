#include <main.h>

int b_value;
char b_hexa[10];
char b_hexa_tmp[10];

void main()
{
   setup_low_volt_detect(FALSE);
   b_value = 0;
    
   while(true)
   {
   
   
      int n = b_value;
      int i = 0; 
      while(n!=0) {    
        int temp  = 0; 
        // storing remainder in temp variable. 
        temp = n % 16; 
        // check if temp < 10 
        if(temp < 10) { 
            b_hexa_tmp[i] = temp + 48; 
            i++; 
        } 
        else { 
            b_hexa_tmp[i] = temp + 55; 
            i++; 
        }
        n = n/16; 
    } 
    // printing hexadecimal number array in reverse order 
    for(int j= i-1 ; j>=0 ; j-- ){ 
        b_hexa << b_hexa_tmp[j]; 
    }
   
   output_b(b_hexa);
   
   delay_ms(500);
   b_value++;
   }

}
